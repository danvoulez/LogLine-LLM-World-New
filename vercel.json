{
  "version": 2,
  "buildCommand": "cd backend && npm run build",
  "installCommand": "cd backend && npm install",
  "framework": null,
  "outputDirectory": "backend/dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/v1/cron/check-alerts",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/v1/cron/cleanup-audit",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/v1/cron/cleanup-alert-history",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/v1/cron/cleanup-rate-limits",
      "schedule": "0 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

